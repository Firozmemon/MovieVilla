<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firozmemon.movievilla">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MovieVillaApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieVilla">
        <activity android:name=".view.activity.DiscoverMovieListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MovieDetailsActivity"
            android:theme="@style/NoBarAppTheme" />
        <activity
            android:name=".view.activity.FavouriteMovieListActivity"
            android:label="Favourites" />
        <activity
            android:name=".view.activity.SearchMovieListActivity"
            android:label="Search Movie" />
    </application>

</manifest>